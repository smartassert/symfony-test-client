{
    "name": "smartassert/symfony-test-client",
    "description": "",
    "keywords": [],
    "homepage": "https://github.com/smartassert/symfony-test-client",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Jon Cram",
            "email": "webignition@gmail.com"
        }
    ],
    "scripts": {
        "cs-fixer-dry-run": "./vendor/bin/php-cs-fixer check --allow-risky=yes --verbose --show-progress none",
        "cs-fixer-fix": "./vendor/bin/php-cs-fixer fix --allow-risky=yes --diff",
        "cs-phpcs": "./vendor/bin/phpcs",
        "cs": [
            "@cs-fixer-dry-run",
            "@cs-phpcs"
        ],
        "static-analysis": "./vendor/bin/phpstan",
        "test": "./vendor/bin/phpunit --colors=always",
        "ci": [
            "@composer cs",
            "@composer static-analysis",
            "@composer test"
        ]
    },
    "autoload": {
        "psr-4": {
            "SmartAssert\\SymfonyTestClient\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "SmartAssert\\Tests\\SymfonyTestClient\\": "tests/"
        }
    },
    "require": {
        "php": "^8.4",
        "psr/http-client": "^1.0",
        "psr/http-factory": "^1.0",
        "psr/http-message": "^1.0",
        "symfony/browser-kit": "^7 || ^8",
        "symfony/framework-bundle": "^7 || ^8",
        "symfony/psr-http-message-bridge": "^7 || ^8"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.91",
        "guzzlehttp/guzzle": "^7.4",
        "mockery/mockery": "^1.5",
        "phpstan/extension-installer": "^1.1",
        "phpstan/phpstan": "^1.5",
        "phpstan/phpstan-mockery": "^1.0",
        "phpstan/phpstan-phpunit": "^1.1",
        "phpunit/phpunit": "^12",
        "squizlabs/php_codesniffer": "^4"
    },
    "minimum-stability":"stable",
    "prefer-stable":true,
    "config": {
        "allow-plugins": {
            "phpstan/extension-installer": true
        },
        "sort-packages": true
    }
}
